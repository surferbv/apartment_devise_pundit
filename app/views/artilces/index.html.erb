<p id="notice"><%= notice %></p>

<h1>Artilces</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artilces.each do |artilce| %>
      <tr>
        <td><%= artilce.title %></td>
        <td><%= artilce.text %></td>
        <td><%= link_to 'Show', artilce %></td>
        <td><%= link_to 'Edit', edit_artilce_path(artilce) %></td>
        <td><%= link_to 'Destroy', artilce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

